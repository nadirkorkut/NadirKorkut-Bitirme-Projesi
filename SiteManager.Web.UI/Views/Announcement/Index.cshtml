@model ICollection<AnnouncementDto>

<div>
    <a class="btn btn-success" asp-action="AddAnnouncement" asp-controller="Announcement">Yeni Duyuru Ekle</a>
</div>
<br />
<table class="table table-dark table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Duyuru</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var announcement in Model)
        {
            <tr>
                <th scope="row">@announcement.Id</th>
                <td>@announcement.Content</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Announcement" asp-action="UpdateAnnouncement" asp-route-id="@announcement.Id">
                        Güncelle
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="Announcement" asp-action="DeleteAnnouncement" asp-route-id="@announcement.Id">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>