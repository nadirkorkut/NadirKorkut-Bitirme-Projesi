@model AnnouncementDto

<form asp-controller="Announcement" asp-action="AddAnnouncement" method="post">
    <div class="form-group">
        <label asp-for="Content" class="control-label">Duyuru İçeriği:</label>
        <textarea rows="5" asp-for="Content" class="form-control"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Ekle</button>
</form>