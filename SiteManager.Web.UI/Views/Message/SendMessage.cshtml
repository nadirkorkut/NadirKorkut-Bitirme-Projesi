@model MessageDto

<div>
    <h3>Yeni Mesaj Gönder</h3>
</div>
<br />

<form asp-controller="Message" asp-action="SendMessage" method="post">
    <div class="form-group">
        <label asp-for="Receiver" class="control-label">Alıcı E-Mail Adresi</label>
        <input type="text" asp-for="Receiver" class="form-control" />
        <span asp-validation-for="Receiver" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MessageText" class="control-label">Mesaj</label>
        <textarea rows="5" asp-for="MessageText" class="form-control"></textarea>
        <span asp-validation-for="MessageText" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Gönder</button>
</form>