@model ICollection<ExpenseTypeDto>

<div>
    <a class="btn btn-success" asp-action="AddExpenseType" asp-controller="ExpenseType">Yeni Gider Tipi Ekle</a>
</div>
<br />

<table class="table table-dark table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Gider Tipi</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var expenseType in Model)
        {
            <tr>
                <th scope="row">@expenseType.Id</th>
                <th>@expenseType.TypeName</th>
                <td>
                    <a class="btn btn-warning" asp-controller="ExpenseType" asp-action="UpdateExpenseType" asp-route-id="@expenseType.Id">
                        Güncelle
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="ExpenseType" asp-action="DeleteExpenseType" asp-route-id="@expenseType.Id">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>