@model ICollection<UserDto>

<div>
    <a class="btn btn-success" asp-action="AddUser" asp-controller="User">Kullanıcı Ekle</a>
</div>
<br />
<table class="table table-dark table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Kimlik Numarası</th>
            <th scope="col">Kullanıcı Adı</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Email</th>
            <th scope="col">Telefon Numarası</th>
            <th scope="col">Araç Plaka Numarası</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.NationalityId</td>
                <td>@user.UserName</td>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>
                    @if(user.PhoneNumber == null)
                    {
                        <span>Telefon Bilgisi Yok</span>
                    }
                    else
                    {
                        @user.PhoneNumber
                    }
                </td>
                <td>
                    @if (user.LicensePlate == null)
                    {
                        <span>Araç Bilgisi Yok</span>
                    }
                    else
                    {
                        @user.LicensePlate
                    }
                </td>
                <td>
                    <a class="btn btn-warning" asp-controller="User" asp-action="UpdateUser" asp-route-id="@user.Id">
                        Güncelle
                    </a>
                </td>
                <td>
                    <a class="btn btn-danger" asp-controller="User" asp-action="UserDelete" asp-route-id="@user.Id">
                        Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>